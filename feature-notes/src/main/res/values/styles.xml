<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleStyle">
        <item name="android:tint">@color/light_purple</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/light_white_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/light_white_edit_text</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:padding">@dimen/value_10_dp</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:tint">@color/light_gray_icon</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="AppPopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/light_background</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/light_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonSearchStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:padding">@dimen/value_10_dp</item>
    </style>
</resources>