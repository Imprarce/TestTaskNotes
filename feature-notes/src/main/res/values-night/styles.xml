<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleStyle">
        <item name="android:tint">@color/blue</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:padding">@dimen/value_10_dp</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:tint">@color/dark_gray</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dark_background</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="ButtonSearchStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">@dimen/value_10_dp</item>
    </style>
</resources>